{
	"manifest_version": 2,

	"name": "bensso-toolkit",
	"description": "Toolkit to test integration with Belgian NSSO",
	"version": "1.1",

	"browser_action": {
		"default_icon": {
			"16": "icons/Icon-16.png",
			"32": "icons/Icon-32.png",
			"48": "icons/Icon-48.png",
			"128": "icons/Icon-128.png"
		},
		"default_title": "bensso-toolkit"
	},
	"permissions": ["contextMenus"],
  "background": {
    "scripts": [  "background.js"]
  },
	"icons": {
		"16": "icons/Icon-16.png",
		"32": "icons/Icon-32.png",
		"48": "icons/Icon-48.png",
		"128": "icons/Icon-128.png"
	},
	"content_security_policy": "script-src 'self' https://code.jquery.com https://cdn.jsdelivr.net https://stackpath.bootstrapcdn.com; object-src 'self'"
}
